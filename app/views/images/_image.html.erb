<div class="col-sm">
  <figure class="figure">    
    <%= image_tag image.picture.medium.url, class:"figure-img img-fluid rounded"%>
    <figcaption class="figure-caption text-right">
      <%= image.description %>
      <br/>
      <%= link_to t('.edit_link'), edit_image_path(image) %> 
      <%= link_to t('.destroy_link'), image, method: :delete, data: {confirm: 'sure?'}%>
    </figcaption>
  </figure>
</div>

